<div class="container">
  <h1 class="text-center">Edit Music</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @music, local: true, html: { multipart: true } do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :artist %>
          <%= form.text_field :artist, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :file %>
          <%= form.file_field :file, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :genre %>
          <%= form.text_field :genre, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :release_date %>
          <%= form.date_select :release_date, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :notes %>
          <%= form.text_area :notes, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
          <%= form.submit "Update", class: "btn btn-success btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
