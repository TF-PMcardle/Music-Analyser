<div class="container mt-5">
  <h1 class="text-center custom-title mb-4">Upload a song to get recommendations</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <%= form_with model: @music, local: true, html: { multipart: true } do |form| %>
          <div class="mb-3">
            <%= form.file_field :file, class: "form-control", placeholder: "Choose your music file" %>
          </div>
          <div class="d-grid gap-2">
            <%= form.submit "Analyze", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<footer class="bg-dark text-light mt-5 p-3 text-center">
  <p>&copy; 2024 MusicAnalyser. All rights reserved.</p>
</footer>
