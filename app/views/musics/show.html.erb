<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @music.title %></h1>
  <p class="text-center">Uploaded by: <strong><%= @music.user.name %></strong></p>
  <p class="text-center">
    File: <%= link_to 'Download', rails_blob_path(@music.file, disposition: 'attachment'), class: 'btn btn-link' %>
  </p>

  <%# Display the analyzed BPM and Key %>
  <div class="text-center mt-4">
    <% if @bpm.present? %>
      <p><strong>BPM:</strong> <%= @bpm.join(", ") %></p>
    <% else %>
      <p><strong>BPM:</strong> Not available</p>
    <% end %>

    <% if @key.present? %>
      <p><strong>Key:</strong> <%= @key.join(", ") %></p>
    <% else %>
      <p><strong>Key:</strong> Not available</p>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'Edit', edit_music_path(@music), class: 'btn btn-warning me-2' %>
    <%= button_to 'Delete', @music, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger me-2' %>
    <%= link_to 'Back', musics_path, class: 'btn btn-secondary' %>
  </div>
</div>
